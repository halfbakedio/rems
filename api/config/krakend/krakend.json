{
  "$schema": "https://www.krakend.io/schema/v3.json",
  "version": 3,
  "name": "REMS - API Gateway",
  "extra_config": {
    "security/cors": {
      "allow_origins": [
        "*",
        "https://app.derptown.com",
        "http://app.dev.derptown.com"
      ],
      "expose_headers": [
        "Content-Length"
      ],
      "max_age": "12h",
      "allow_methods": [
        "GET",
        "HEAD",
        "POST"
      ]
    }
  },
  "timeout": "3000ms",
  "cache_ttl": "300s",
  "output_encoding": "json",
  "endpoints": [
    {
      "endpoint": "/v1/tasks",
      "method": "GET",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/",
          "encoding": "json",
          "sd": "static",
          "method": "GET"
        }
      ]
    }
  ]
}